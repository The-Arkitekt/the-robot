@startuml

node "Services" {
  [Remote Access Gateway] as RAG
  [Remote Data Inlat]     as RDI
  [Drive Status Reporter] as DSR
  [Drive Controller]      as DC
  [Drive Operator]        as DO
  [Remote Data Outlet]    as RDO

  HTTP - RAG
}

node "MiddleWare" {
  [Message Broker] as MB
}

node "Infrastructure" {
  [Hardware Interface] as HI
}

RAG .down.> MB
RDI .down.> MB
DSR .down.> MB
DC  .down.> MB
DO  .down.> MB
RDO .down.> MB

DO .right.> HI

@enduml
